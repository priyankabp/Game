<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.game">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_player"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StagesActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".StageOneActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".StageTwoActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".StageThreeActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".WinningActivity" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>